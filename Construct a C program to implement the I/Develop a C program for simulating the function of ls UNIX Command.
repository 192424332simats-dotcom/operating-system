#include <stdio.h>
#include <dirent.h>   
#include <stdlib.h>  

int main() {
    DIR *dir;
    struct dirent *entry;

    
    dir = opendir(".");
    if (dir == NULL) {
        perror("Unable to open directory");
        exit(1);
    }

    printf("Files and directories in the current folder:\n\n");

    
    while ((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }

    
    closedir(dir);

    return 0;
}

output 
Files and directories in the current folder:

.
..
a.out
ls_simulator.c
sample.txt
demo.txt
