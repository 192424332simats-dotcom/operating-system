#include <stdio.h>
#include <fcntl.h>       
#include <unistd.h>      
#include <sys/stat.h>    
#include <dirent.h>      
#include <stdlib.h>      
#include <string.h>      

int main() {
    int fd;
    struct stat fileStat;
    DIR *dir;
    struct dirent *entry;
    char buffer[100];

   
    fd = open("sample.txt", O_CREAT | O_RDWR, 0644);
    if (fd == -1) {
        perror("Error opening file");
        exit(1);
    }
    printf("File 'sample.txt' opened successfully.\n");

   
    write(fd, "UNIX System Call Demo\n", 22);

    
    lseek(fd, 0, SEEK_SET);

    // Read content
    read(fd, buffer, sizeof(buffer) - 1);
    printf("Data read from file: %s\n", buffer);

    
    int flags = fcntl(fd, F_GETFL);
    printf("File access mode (fcntl): %d\n", flags & O_ACCMODE);

   
    if (stat("sample.txt", &fileStat) == -1) {
        perror("stat error");
        exit(1);
    }
    printf("File Size: %ld bytes\n", fileStat.st_size);
    printf("File Permissions: %o\n", fileStat.st_mode & 0777);
    printf("Number of Links: %ld\n", fileStat.st_nlink);

    close(fd);

    
    dir = opendir(".");
    if (dir == NULL) {
        perror("opendir error");
        exit(1);
    }

    printf("\nFiles in current directory:\n");
    while ((entry = readdir(dir)) != NULL) {
        printf("  %s\n", entry->d_name);
    }

    closedir(dir);

    return 0;
}

Output

File 'sample.txt' opened successfully.
Data read from file: UNIX System Call Demo
File access mode (fcntl): 2
File Size: 22 bytes
File Permissions: 644
Number of Links: 1

Files in current directory:
  .
  ..
  sample.txt
  io_syscalls.c
  a.out

